<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/bg_list_item"
		>
	<LinearLayout
			android:id="@+id/notes_item_content_time"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:orientation="vertical">
		<TextView
				android:id="@+id/notes_item_content_month"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/notes_item_content_month"
				android:text="2æœˆ"
				/>
		<TextView
				android:id="@+id/notes_item_content_day"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/notes_item_content_day"
				android:text="23"
				/>
	</LinearLayout>

	<TextView
			style="@style/notes_item_content_text"
			android:id="@+id/notes_item_content_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/notes_item_content_time"
			/>
</RelativeLayout>