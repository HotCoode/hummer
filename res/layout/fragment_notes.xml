<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 android:background="@color/theme_lighter">

	<ListView
		android:id="@+id/notes_list_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:cacheColorHint="@android:color/transparent"
		android:listSelector="@android:color/transparent"
		android:footerDividersEnabled="true"
		android:paddingLeft="@dimen/hover_width"
		android:paddingRight="@dimen/hover_width"
		android:scrollbarStyle="outsideOverlay" />

	<FrameLayout
		android:id="@+id/add_note"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/translucent_dark"
		android:visibility="gone">

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/background_holo_light"
			android:paddingLeft="@dimen/padding_normal"
			android:paddingRight="@dimen/padding_normal">

			<EditText
				android:id="@+id/note_edit_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/new_item_hint"
				android:textStyle="bold"
				style="@style/new_item_text"
				android:paddingTop="@dimen/padding_normal"
				android:paddingBottom="@dimen/padding_normal"
				android:focusableInTouchMode="true"
				android:focusable="true"
				android:layout_gravity="left|bottom"
				android:layout_marginRight="50dp" />

			<Button
				android:layout_width="50dp"
				android:layout_height="40dp"
				style="@style/Text.normal"
				android:layout_gravity="right"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:background="@drawable/button"
				android:gravity="center"
				android:text="@string/add" />
		</FrameLayout>

	</FrameLayout>

</FrameLayout>