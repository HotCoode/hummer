<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
		<item name="android:actionBarStyle">@style/Actionbar</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

	<style name="MyTheme" parent="@android:style/Theme.Holo.Light">
	</style>

	<style name="Actionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
		<item name="android:background">@drawable/actionbar</item>
		<item name="android:titleTextStyle">@style/Actionbar.TitleTextStyle</item>
	</style>

	<style name="Actionbar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
		<item name="android:textColor">@color/lighter</item>
	</style>


	<style name="main_list_text">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/text_normal</item>
		<item name="android:background">@drawable/bg_pressable_normal</item>
	</style>

	<style name="drawer_list_item">
		<item name="android:textSize">21sp</item>
		<item name="android:textColor">@color/text_normal</item>
		<item name="android:background">@drawable/bg_pressable_normal</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:paddingRight">15dp</item>
		<item name="android:gravity">left</item>
	</style>

	<style name="header_hint_text">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/text_normal</item>
	</style>

	<style name="notes_item_month">
		<item name="android:textSize">21sp</item>
		<item name="android:textColor">@color/text_normal</item>
	</style>

	<style name="type_container_small">
		<item name="android:textSize">13sp</item>
		<item name="android:textColor">@color/background_holo_light</item>
	</style>

	<style name="type_container_big">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/background_holo_light</item>
	</style>

	<style name="notes_item_content_text">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/text_normal</item>
	</style>

	<style name="new_item_text">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/text_normal</item>
	</style>

	<style name="dialog_title_text">
		<item name="android:textColor">@color/holo_blue_dark</item>
		<item name="android:textSize">18sp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingBottom">16dp</item>
	</style>

	<style name="dialog_button" parent="@android:style/Widget.Holo.Button">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingBottom">8dp</item>
		<item name="android:minHeight">40dip</item>
		<item name="android:minWidth">64dip</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">4dip</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:background">@drawable/dialog_btn_bg</item>
	</style>

	<style name="dialog_title_separator">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:background">@color/holo_blue_dark</item>
	</style>

	<style name="Separator">
		<item name="android:background">@color/separator</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">1dp</item>
	</style>

	<style name="Text"/>
	<style name="Text.normal">
		<item name="android:textSize">12dp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/text_normal</item>
	</style>
	<style name="Text.gray">
		<item name="android:textColor">@color/text_gray</item>
	</style>
	<style name="Text.gray.normal">
		<item name="android:textSize">12dp</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="Text.gray.big">
		<item name="android:textSize">18dp</item>
		<item name="android:textStyle">bold</item>
	</style>


</resources>
